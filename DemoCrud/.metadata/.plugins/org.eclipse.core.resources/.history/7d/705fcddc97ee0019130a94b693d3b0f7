<script>
	function submitSearchForm(page) {
		$("#page").val(page);
		$("#maxitem").val();
		$("#listForm").submit();
	}
	$("#btnSearch").click(function(e){
		$("#page").val(1);
		$("#listForm").submit();
		})
</script>